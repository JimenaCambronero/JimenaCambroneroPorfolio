---
interface Props {
  title: string
  company: string
  description: string
  date: string
}

const { title, company, description, date } = Astro.props
---

<div
  class="relative mx-12 pb-12 before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-['']"
>
  <div class="relative pb-4">
    <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl">
      &bull;
    </span>
    <h3 class="text-xl font-bold text-yellow-500">{title}</h3>
    <h4 class="font-semibold text-xl text-gray-700 dark:text-white">{company}</h4>
    <time class="p-0 m-0 text-m text-gray-800/80 dark:text-white/80">{date}</time>
  </div>


  <div class="relative flex flex-col gap-2 text-gray-500 dark:text-gray-300">
    {description}
  </div>
</div>

